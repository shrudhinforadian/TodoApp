
if($(".active-status").text()==1){
  $('#myTable').prepend('<%= j render @todo %>');
}
else {

  var delimiter =
          $('<div class="page-delimiter" data-page="<%= params[:page] %>"></div>');
  $('#myTable').append(delimiter);
  $('#myTable').html('<%= j render @todos %>');
  $('.pagination').replaceWith('<%= j will_paginate @todos %>');
  <% unless @todos.next_page %>
  $('#infinite-scrolling .pagination').remove();
  <% end %>
}
$('#myTable tr ').each(function (i) {
  $('.up-link', this).css('visibility','visible');
  $('.down-link', this).css('visibility','visible');
  if (i==0) {
    $('.up-link', this).css('visibility','hidden');
  }
  last=i;
});
$('#myTable tr ').each(function(i) {
  if (i==last){
      $('.down-link',this).css('visibility','hidden');
    }
  });
