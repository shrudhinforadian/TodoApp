$('#myTable tr ').each(function() {
  $('.up-link',this).show();
  $('.down-link',this).show();
   if($("#myTable tr:first-child").text()==$(this).text())
   {
     $('.up-link',this).css('visibility','hidden');
   }
   if($("#myTable tr:last-child").text()==$(this).text())
   {
     $('.down-link',this).css('visibility','hidden');
   }
});
