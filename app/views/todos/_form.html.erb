<div class="">

  <div class="form-horizontal">
    <%= form_with(model: [ @current_user, @current_user.todos.build ],
    remote: true) do |form| %>


      <%= form.text_field :body ,:class=>"input-todo form-control",
      :placeholder=>"Enter todo" ,:id=>"enter-todo focusedInput",
      remote: true, minlength: 8%>


  </div>
<% end %>

</div>

<script>
  $(document).ready(function () {
    $(".input-todo").on("keyup", function (e) {
      if($(this).val().length >7){
      if (e.which == 13) {
        $(this).val(" ");
      }
    }
    });
  });
</script>
