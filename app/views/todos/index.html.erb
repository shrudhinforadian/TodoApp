<div class="container">
  <div class="section-image">
    <%= image_tag "check.png" %>
  </div>
  <div class="header-section">
    <div class=" input-search">
      <input class="form-control" id="myInput" type="text" placeholder="Search">
    </div>
    <div class="current-user">
      <%if   @current_user %>
        <div class="user-name">
          <%= @current_user.name %>
        </div>
        <div class="logout-link">
          <%= link_to 'Logout', logout_path ,:class=>" card-link "%>
        </div>
      <%end%>
    </div>
  </div>
  <br>
  <div><%= render 'form' %></div>
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to 'Active', root_url(:active=> 1), :class=>"active-link btn Active",:val=>1 %>
    <%= link_to 'Inactive', root_url(:active=>0), :class=>"active-link btn Inactive ",:id=>0 %>
  </div>

  <div class="listing-todos">
    <table class="cards-table">
      <tbody id="myTable">

          <%= render @todos %>

        <div id="infinite-scrolling" >
          <%= will_paginate @todos%>
        </div>
      </tbody>
    </table>
  </div>
  <br>
  <div class="active-status"><%=@active%></div>
  <script>
    $(document).ready(function () {

      $("#myInput").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function () {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
      $(".active-status").hide();
      var active = $(".active-status").text();
      if (active == 'true') {
        $(".btn").removeClass("active-link-visited");
        $(".Inactive").addClass("active-link-visited");
      } else {
        $(".btn").removeClass("active-link-visited");
        $(".Active").addClass("active-link-visited");
      }

    });

    $('#myTable tr ').each(function () {
      $('.up-link', this).show();
      $('.down-link', this).show();
      if ($("#myTable tr:first-child").text() == $(this).text()) {
        $('.up-link', this).hide();
      }
      if ($("#myTable tr:last-child").text() == $(this).text()) {
        $('.down-link', this).hide();
      }



    });
  </script>
