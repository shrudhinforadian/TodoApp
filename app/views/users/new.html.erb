<div class="container">
  <div id="first" class="text-center">
    <% if current_user%>
      <div class="alert alert-warning">Do you want to logout?</div>
      <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
    </div>
  <% else %>

    <div class="row">
      <div class="col-md-5 mx-auto">
        <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages alert alert-danger alert-dismissible">
            <h2>Form is invalid</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div id="second">
          <div class="myform form ">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
                <h1 >Signup</h1>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :name %><br/>
              <%= f.text_field :name , :class => "form-control" ,:placeholder => "Enter your Name"%>
            </div>
            <div class="form-group">
              <%= f.label :email %><br/>
              <%= f.text_field :email , :class => "form-control" ,:placeholder => "Enter your Email"%>
            </div>
            <div class="form-group">
              <%= f.label :password %><br/>
              <%= f.password_field :password , :class => "form-control" ,:placeholder => "Enter your Password"%>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation ,:class => "form-control" ,:placeholder => "Confirm your Password"%>
            </div>
          </div>
          <div class="col-md-12 text-center mb-3">
            <div class="actions"><%= f.submit "Sign Up" , :class=>"btn btn-block mybtn btn-primary tx-tfm"%></div>
          </div>
          <div class="col-md-12 ">
            <div class="form-group">
              <p class="text-center">Already have an account?<br>
                <%= link_to " Log In", login_path %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>
</div>
